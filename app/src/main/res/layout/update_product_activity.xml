        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/common_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/title"
                style="@style/common_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Ex: Sell car"
                app:met_primaryColor="@color/base_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_label" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/price"
                style="@style/common_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:hint="Ex: 10000 USD"
                android:inputType="number"
                app:met_primaryColor="@color/base_color"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aim_label" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/aim_spinner"
                app:ms_baseColor="@color/base_color"
                app:ms_highlightColor="@color/base_color"
                app:ms_arrowColor="@color/base_color"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.8dp"
                app:ms_alignLabels="false"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/condition_msg" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/condition_spinner"
                app:ms_baseColor="@color/base_color"
                app:ms_highlightColor="@color/base_color"
                app:ms_arrowColor="@color/base_color"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.8dp"
                app:ms_alignLabels="false"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_label" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/county_spinner"
                app:ms_baseColor="@color/base_color"
                app:ms_highlightColor="@color/base_color"
                app:ms_arrowColor="@color/base_color"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.8dp"
                app:ms_alignLabels="false"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_label" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/cities_spinner"
                app:ms_baseColor="@color/base_color"
                app:ms_highlightColor="@color/base_color"
                app:ms_arrowColor="@color/base_color"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.8dp"
                app:ms_alignLabels="false"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                style="@style/common_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories_label" />

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/categories_spinner"
                app:ms_baseColor="@color/base_color"
                app:ms_highlightColor="@color/base_color"
                app:ms_arrowColor="@color/base_color"
                app:ms_arrowSize="16dp"
                app:ms_thickness="0.8dp"
                app:ms_alignLabels="false"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/common_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/content_label" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:textColor="@color/red" />
            </LinearLayout>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/content"
                style="@style/common_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:gravity="left|top"
                android:hint="Ex: I want to sell an car"
                android:inputType="textMultiLine"
                android:lines="3"
                android:singleLine="true" />


            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/btn_submit"
                style="@style/common_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/submit" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
    </LinearLayout>
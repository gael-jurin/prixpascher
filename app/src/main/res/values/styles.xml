<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- App styles -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextAppearance.Custom.PtrHeader.Title" parent="android:TextAppearance.Large.Inverse">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/bg_actionbar</item>
        <item name="android:typeface">serif</item>
        <item name="titleTextStyle">@style/customTextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

    <style name="customTextAppearance.AppCompat.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#0389ff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="PriceTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ff2eb671</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PromoTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#f56a00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="NotifTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#f56a00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="common_text">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/text_border</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="common_text_view">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@color/base_color</item>
    </style>

    <style name="icon_button">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textColor">#707274</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_full</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>

    <style name="ratingSmallBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_small_full</item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_shadowColor">#444</item>
        <item name="elevation">4dp</item>
        <item name="menu_colorNormal">#ff20c8cc</item>
        <item name="fab_colorNormal">#ff20c8cc</item>
        <item name="menu_colorPressed">#ffffb108</item>
        <item name="fab_colorPressed">#ffffb108</item>
    </style>

</resources>